<% if @bucket.errors.any? %>
    <ul>
      <% @bucket.errors.full_messages.each do |error| %>
      <li> <%= error %> </li>
    <% end %>
    </ul>
  <% end %>
  
<div class="row">
  <div class="col s12 m8 offset-m2">

  <div class="row">
    <%= form_for @bucket do |f| %>
    <div class="input-field col s12">
      <%= f.label :name, 'Bucket Name', class: 'active' %>
      <%= f.text_field :name, required: true %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m6">
      <%= f.label :complete_by, class: 'active' %>
      <%= f.date_field :complete_by %>
    </div>


    <div class="input-field col s12 m6">
      <%= f.label :theme, class: 'active' %>
      <%= f.select :theme, Bucket.theme, {include_blank: 'Bucket List Theme'} %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12 m6">
      <p><i class="material-icons">add_a_photo</i>
      <%= f.label :image, 'Bucket Pic', class: 'active'%>
      <%= f.file_field :image%></p>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12 m8">
      <%= f.submit 'submit', class: 'btn'%>
    </div>
  </div>
  <%end%>
  </div>

</div>

<script>
$(document).ready(function() {
    $('select').material_select();
  });
</script>
