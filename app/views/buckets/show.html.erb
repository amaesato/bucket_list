<div class="row">

  <div class="col s12 m8 l9">
    <div class="col s2">

    </div>
    <div class="col s11">
      <h4 class="black-text"><%= @bucket.name %></h4>
      <% if @bucket.theme.present? %>
        <%= @bucket.theme %>
      <%end%>

      <% if @items.present? %>
        <% @items.each do |item| %>
      <ul>
        <li><%= link_to item.item_name, bucket_item_path(@bucket) %></li>
        <%end%>
      <% else %>
        <h5><%= link_to 'Start Adding To Your Bucket List', new_bucket_item_path(@bucket) %></h5>
      <%end%>
    </div>
  </div>

  <%= render(partial: 'layouts/sidenav') %>
</div>
